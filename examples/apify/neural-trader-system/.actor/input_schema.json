    "symbols": {
      "title": "Trading Symbols",
      "type": "array",
      "description": "List of trading symbols (e.g., BTC/USD, AAPL, EUR/USD). Supports stocks, crypto, forex.",
      "editor": "stringList",
      "default": ["BTC/USD", "ETH/USD", "AAPL", "TSLA"],
      "prefill": ["BTC/USD", "ETH/USD", "AAPL", "TSLA"],
      "minItems": 1,
      "maxItems": 100
    },
    "strategy": {
      "title": "Neural Strategy",
      "type": "string",
      "description": "Select the neural network trading strategy",
      "enum": [
        "neural_momentum",
        "lstm_prediction",
        "transformer_attention",
        "ensemble",
        "reinforcement"
      ],
      "enumTitles": [
        "âš¡ Neural Momentum - Fast pattern recognition (<10ms)",
        "ğŸ“‰ LSTM Prediction - Time series forecasting (~50ms)",
        "ğŸ¯ Transformer Attention - Multi-head analysis (~100ms)",
        "ğŸ† Ensemble - Combined predictions, highest accuracy (~200ms)",
        "ğŸ¤– Reinforcement Learning - Adaptive strategy (~80ms)"
      ],
      "default": "ensemble",
      "editor": "select"
    },
    "riskProfile": {
      "title": "Risk Profile",
      "type": "string",
      "description": "Risk tolerance level for position sizing and stop-loss",
      "enum": [
        "conservative",
        "moderate",
        "aggressive",
        "custom"
      ],
      "enumTitles": [
        "ğŸ›¡ï¸ Conservative - Low risk, tight stops (2% max loss)",
        "âš–ï¸ Moderate - Balanced risk/reward (5% max loss)",
        "ğŸ”¥ Aggressive - Higher risk, wider stops (10% max loss)",
        "âš™ï¸ Custom - Manual configuration"
      ],
      "default": "moderate",
      "editor": "select",
      "sectionCaption": "Risk Management",
      "sectionDescription": "Configure position sizing, stop-loss, and risk tolerance"
    },
    "maxPositionSize": {
      "title": "Max Position Size (%)",
      "type": "number",
      "description": "Maximum position size as percentage of portfolio (1-100%)",
      "minimum": 1,
      "maximum": 100,
      "default": 10,
      "editor": "number"
    },
    "stopLoss": {
      "title": "Stop Loss (%)",
      "type": "number",
      "description": "Stop loss percentage from entry price (0.1-50%)",
      "minimum": 0.1,
      "maximum": 50,
      "default": 2.5,
      "editor": "number"
    },
    "takeProfit": {
      "title": "Take Profit (%)",
      "type": "number",
      "description": "Take profit percentage from entry price (0.1-200%)",
      "minimum": 0.1,
      "maximum": 200,
      "default": 5,
      "editor": "number"
    },
    "trailingStop": {
      "title": "Trailing Stop (%)",
      "type": "number",
      "description": "Trailing stop percentage (0 = disabled)",
      "minimum": 0,
      "maximum": 20,
      "default": 0,
      "editor": "number"
    },
    "maxDrawdown": {
      "title": "Max Drawdown (%)",
      "type": "number",
      "description": "Maximum portfolio drawdown before stopping (0 = disabled)",
      "minimum": 0,
      "maximum": 50,
      "default": 15,
      "editor": "number"
    },
    "timeframe": {
      "title": "Timeframe",
      "type": "string",
      "description": "Candle timeframe for analysis",
      "enum": [
        "1m",
        "5m",
        "15m",
        "1h",
        "4h",
        "1d",
        "1w"
      ],
      "enumTitles": [
        "1 Minute - Scalping",
        "5 Minutes - Day trading",
        "15 Minutes - Intraday",
        "1 Hour - Swing trading",
        "4 Hours - Position trading",
        "1 Day - Long-term",
        "1 Week - Macro trends"
      ],
      "default": "1h",
      "editor": "select",
      "sectionCaption": "Analysis Settings",
      "sectionDescription": "Configure timeframes, lookback periods, and confidence thresholds"
    },
    "lookbackPeriod": {
      "title": "Lookback Period",
      "type": "integer",
      "description": "Number of historical candles for analysis (10-1000)",
      "minimum": 10,
      "maximum": 1000,
      "default": 100,
      "editor": "number"
    },
    "confidenceThreshold": {
      "title": "Minimum Confidence (%)",
      "type": "number",
      "description": "Minimum confidence level to generate signals (0-100%)",
      "minimum": 0,
      "maximum": 100,
      "default": 70,
      "editor": "number"
    },
    "dataSource": {
      "title": "Data Source",
      "type": "string",
      "description": "Market data provider for price feeds",
      "enum": [
        "auto",
        "yahoo",
        "alpha_vantage",
        "polygon",
        "binance",
        "coinbase"
      ],
      "enumTitles": [
        "Auto-detect (Recommended)",
        "Yahoo Finance (Stocks/ETFs)",
        "Alpha Vantage (Stocks/Forex)",
        "Polygon.io (Stocks/Options)",
        "Binance (Crypto)",
        "Coinbase (Crypto)"
      ],
      "default": "auto",
      "editor": "select"
    },
    "neuralLayers": {
      "title": "Hidden Layers",
      "type": "integer",
      "description": "Number of hidden layers in the neural network (1-10)",
      "minimum": 1,
      "maximum": 10,
      "default": 3,
      "editor": "number",
      "sectionCaption": "Neural Network Configuration",
      "sectionDescription": "Advanced neural network architecture settings"
    },
    "neuralNeurons": {
      "title": "Neurons Per Layer",
      "type": "string",
      "description": "Comma-separated neuron counts (e.g., 128,64,32)",
      "default": "128,64,32",
      "editor": "textfield"
    },
    "activation": {
      "title": "Activation Function",
      "type": "string",
      "description": "Neural network activation function",
      "enum": ["relu", "tanh", "sigmoid", "leaky_relu", "elu", "swish"],
      "enumTitles": [
        "ReLU - Fast, standard choice",
        "Tanh - Bounded output (-1 to 1)",
        "Sigmoid - Probability output (0 to 1)",
        "Leaky ReLU - Prevents dead neurons",
        "ELU - Smooth negative values",
        "Swish - Self-gated, modern choice"
      ],
      "default": "relu",
      "editor": "select"
    },
    "dropout": {
      "title": "Dropout Rate",
      "type": "number",
      "description": "Dropout rate for regularization (0-0.9)",
      "minimum": 0,
      "maximum": 0.9,
      "default": 0.2,
      "editor": "number"
    },
    "learningRate": {
      "title": "Learning Rate",
      "type": "number",
      "description": "Training learning rate (0.0001-0.1)",
      "minimum": 0.0001,
      "maximum": 0.1,
      "default": 0.001,
      "editor": "number"
    },
    "epochs": {
      "title": "Training Epochs",
      "type": "integer",
      "description": "Number of training epochs (for train mode)",
      "minimum": 1,
      "maximum": 1000,
      "default": 100,
      "editor": "number"
    },
    "batchSize": {
      "title": "Batch Size",
      "type": "integer",
      "description": "Training batch size",
      "minimum": 1,
      "maximum": 512,
      "default": 32,
      "editor": "number"
    },
    "enableGpu": {
      "title": "Enable GPU Acceleration",
      "type": "boolean",
      "description": "Use GPU/WASM SIMD for faster computations",
      "default": true,
      "editor": "checkbox"
    },
    "enableSwarm": {
      "title": "Enable Multi-Agent Swarm",
      "type": "boolean",
      "description": "Use multiple neural agents with consensus voting for better accuracy",
      "default": true,
      "editor": "checkbox",
      "sectionCaption": "Swarm Intelligence",
      "sectionDescription": "Configure multi-agent coordination for improved predictions"
    },
    "swarmAgents": {
      "title": "Number of Swarm Agents",
      "type": "integer",
      "description": "Number of agents in the swarm (3-10 recommended)",
      "minimum": 2,
      "maximum": 20,
      "default": 5,
      "editor": "number"
    },
    "swarmConsensus": {
      "title": "Consensus Method",
      "type": "string",
      "description": "How agents reach consensus on predictions",
      "enum": [
        "majority",
        "weighted",
        "unanimous",
        "confidence"
      ],
      "enumTitles": [
        "Majority Vote - Simple majority wins",
        "Weighted Average - Weight by confidence",
        "Unanimous - All agents must agree",
        "Confidence Weighted - Higher confidence = more weight"
      ],
      "default": "weighted",
      "editor": "select"
    },
    "swarmDiversity": {
      "title": "Strategy Diversity",
      "type": "boolean",
      "description": "Use different strategies across agents for ensemble effect",
      "default": true,
      "editor": "checkbox"
    },
    "patterns": {
      "title": "Chart Patterns",
      "type": "array",
      "description": "Enable specific chart pattern recognition",
      "editor": "select",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "head_shoulders",
          "double_top",
          "double_bottom",
          "triangle",
          "wedge",
          "flag",
          "pennant",
          "cup_handle",
          "fibonacci",
          "elliott_wave",
          "all"
