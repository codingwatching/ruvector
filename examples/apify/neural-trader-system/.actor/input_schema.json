{
  "title": "Neural Trader System Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "mode": {
      "title": "Trading Mode",
      "type": "string",
      "description": "Select the trading operation mode",
      "enum": [
        "signals",
        "optimize",
        "analyze",
        "train",
        "live",
        "backtest",
        "sports_betting",
        "prediction_markets",
        "arbitrage"
      ],
      "enumTitles": [
        "ğŸ“Š Generate Trading Signals",
        "ğŸ’¼ Optimize Portfolio",
        "ğŸ” Deep Market Analysis",
        "ğŸ§  Train Neural Model",
