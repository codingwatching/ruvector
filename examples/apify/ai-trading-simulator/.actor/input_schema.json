{
  "title": "AI Trading Simulator Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "mode": {
      "title": "Simulation Mode",
      "type": "string",
      "description": "Select the operating mode for the simulator",
      "enum": ["simulate", "backtest", "train", "stream"],
      "enumTitles": [
        "Simulate - Generate market data",
        "Backtest - Test trading strategies",
        "Train - Generate ML training data",
        "Stream - Real-time simulation"
      ],
      "default": "simulate",
      "editor": "select"
    },
    "symbol": {
      "title": "Trading Symbol",
      "type": "string",
      "description": "Stock or crypto symbol (e.g., AAPL, BTC-USD, TSLA)",
      "default": "AAPL",
      "editor": "textfield"
    },
    "timeframe": {
      "title": "Timeframe",
      "type": "string",
      "description": "Candlestick interval",
      "enum": ["1m", "5m", "15m", "1h", "4h", "1d"],
      "enumTitles": [
        "1 Minute",
        "5 Minutes",
        "15 Minutes",
        "1 Hour",
        "4 Hours",
        "1 Day"
      ],
      "default": "1h",
      "editor": "select"
    },
    "dataPoints": {
      "title": "Number of Data Points",
      "type": "integer",
      "description": "Number of OHLCV candles to generate",
      "default": 1000,
      "minimum": 10,
      "maximum": 100000,
      "editor": "number"
    },
    "volatility": {
      "title": "Volatility",
      "type": "number",
      "description": "Market volatility factor (0.01 = low, 0.5 = extreme)",
      "default": 0.05,
      "minimum": 0.01,
      "maximum": 0.5,
      "editor": "number"
    },
    "trend": {
      "title": "Market Trend",
      "type": "string",
      "description": "Overall market direction",
      "enum": ["bullish", "bearish", "sideways", "volatile"],
      "enumTitles": [
        "Bullish - Upward trend",
        "Bearish - Downward trend",
        "Sideways - Range-bound",
        "Volatile - High fluctuation"
      ],
      "default": "sideways",
      "editor": "select"
    },
    "strategy": {
      "title": "Trading Strategy",
      "type": "string",
      "description": "Strategy to backtest (for backtest mode)",
      "enum": ["mean_reversion", "momentum", "breakout", "ml_neural"],
      "enumTitles": [
        "Mean Reversion - Buy low, sell high",
        "Momentum - Follow the trend",
        "Breakout - Trade range breaks",
        "ML Neural - AI-based decisions"
      ],
      "default": "momentum",
      "editor": "select"
    },
    "includeOrderBook": {
      "title": "Include Order Book",
      "type": "boolean",
      "description": "Generate Level 2 order book data (bids/asks)",
      "default": false,
      "editor": "checkbox"
    },
    "includeNews": {
      "title": "Include News Sentiment",
      "type": "boolean",
      "description": "Generate synthetic market news and sentiment",
      "default": false,
      "editor": "checkbox"
    },
    "outputFormat": {
      "title": "Output Format",
      "type": "string",
      "description": "Data export format",
      "enum": ["json", "csv", "parquet"],
      "enumTitles": [
        "JSON - Human-readable",
        "CSV - Spreadsheet compatible",
        "Parquet - Columnar (ML-optimized)"
      ],
      "default": "json",
      "editor": "select"
    },
    "initialPrice": {
      "title": "Initial Price",
      "type": "number",
      "description": "Starting price for simulation (optional, auto-detected if empty)",
      "minimum": 0.01,
      "editor": "number"
    },
    "includeIndicators": {
      "title": "Include Technical Indicators",
      "type": "boolean",
      "description": "Calculate SMA, EMA, RSI, MACD, Bollinger Bands",
      "default": true,
      "editor": "checkbox"
    },
    "seed": {
      "title": "Random Seed",
      "type": "integer",
      "description": "Seed for reproducible results (optional)",
      "editor": "number"
    }
  },
  "required": ["mode", "symbol", "timeframe", "dataPoints"]
}
